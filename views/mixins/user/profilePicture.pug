mixin profilePicture(user)
	-let profilePictureUrl = "https://res.cloudinary.com/jacobasper/image/upload/v1664768730/csyvmzbzlui4myseswmm.jpg"
	//- if the user exists and has a profile picture
	if user && user.profile.picture.url
		-profilePictureUrl = user.profile.picture.url
	img(src=profilePictureUrl, class='profile', width='100', height='100')
